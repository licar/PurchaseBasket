@model IEnumerable<PurchaseBasket.Models.ProductModel>
<p style="color:#FF0000">@ViewBag.ErrorMessage</p>
<p><a asp-action="Create">Create New</a></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Select((value, idx) => new { idx, value })) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.value.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.value.Weight)
            </td>
            <td>
                @Html.ActionLink("Add to basket", "Add", "Basket", new { id = item.idx })
            </td>
        </tr>
}
    </tbody>
</table>
